@{
    ViewBag.Title = ViewBag.Group;
}

<input type="hidden" id="groupName" value="@ViewBag.Group"/>

<div id="menuDiv">
    <ul id="menu">
        <li id="insertDraw"><img src="~/Content/drawing4.svg" /></li>
        <li id="insertText"><img src="~/Content/message5.svg" /></li>
        <li id="insertNone"><img src="~/Content/selected2.svg" /></li>     
    </ul>
</div>

<div id="canvasDiv">
    <canvas id="drawCanvas">
        Your browser does not support the HTML5 canvas tag. Upgrade your browser to use this app.
    </canvas>
</div>


@section scripts {
    <!-- Javascript is dumb and requires that I instantiate global variables before loading javascript.-->
    <!-- TODO: stop using global variables.-->
    <script>
        window.chat = null;
        window.sync = null;
        window.canvas = null;
        window.currentAction = null;
    </script>

<script src="https://appsforoffice.microsoft.com/lib/1.1/hosted/office.js" type="text/javascript"></script>
    <link href="~/Scripts/App.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/App.js" type="text/javascript"></script>

<link href="~/Scripts/HomeWB.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/HomeWB.js" type="text/javascript"></script>
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <!-- Canvas drawing library -->
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/fabric.js/1.4.8/fabric.min.js"> </script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script type="text/javascript" src="~/Scripts/whiteboardConnect.js"> </script>
    <script type="text/javascript" src="~/Scripts/whiteBoardDraw.js"> </script>
}